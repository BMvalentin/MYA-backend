CREATE PROCEDURE actualizarProducto
    @IdProducto INT,
    @Nombre NVARCHAR(100),
    @Descripcion NVARCHAR(MAX),
    @IdCategoria INT,
    @IdMarca INT,
    @Precio DECIMAL(18, 2),
    @Stock INT,
    @RutaImagen NVARCHAR(MAX)
AS
BEGIN
    SET NOCOUNT ON;

    UPDATE Productos
    SET 
        Nombre = @Nombre,
        Descripcion = @Descripcion,
        IdCategoria = @IdCategoria,
        IdMarca = @IdMarca,
        Precio = @Precio,
        Stock = @Stock,
        RutaImagen = @RutaImagen
    WHERE IdProducto = @IdProducto;
END;
